<MyScreen>:
    MDBoxLayout:
        orientation:'vertical'
        MDScrollView:
            size_hint:1, 0.8
            MDBoxLayout:
                padding:10
                id:container
                orientation: 'vertical'
                size_hint_y:None
                height:self.minimum_height
        MDBoxLayout:
            size_hint:1, 0.2
            padding:10
            MDTextField:
                id:qry
                text: "Enter your query here"
                on_text_validate:root.ask()
            MDIconButton:
                icon: "account-arrow-right"
                on_press:root.ask()            